{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (g++)",
            "type": "shell",
            "command": "g++ -std=c++17 -O2 -pipe \"${workspaceFolder}\\source.cpp\" -o \"${workspaceFolder}\\student_manager.exe\"",
            "options": { "cwd": "${workspaceFolder}" },
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": []
        },
        {
            "label": "Run student_manager.exe",
            "type": "shell",
            "command": ".\\student_manager.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build & Run (g++)",
            "type": "shell",
            "command": "powershell -NoProfile -Command \"g++ -std=c++17 -O2 -pipe '${workspaceFolder}\\source.cpp' -o '${workspaceFolder}\\student_manager.exe' ; if ($LASTEXITCODE -eq 0) { & '${workspaceFolder}\\student_manager.exe' }\"",
            "options": { "cwd": "${workspaceFolder}" },
            "presentation": { "echo": true, "reveal": "always", "focus": true, "panel": "shared" },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Task generated by Debugger."
        }
    ]
}