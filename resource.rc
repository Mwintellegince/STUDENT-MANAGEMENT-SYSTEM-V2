// Enhanced Add Student Dialog with Tabs
IDD_ADD_DIALOG DIALOGEX 0, 0, 420, 380
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Add New Student - Enhanced"
FONT 9, "Segoe UI"
BEGIN
    CONTROL "", IDC_TAB_CONTROL, "SysTabControl32", WS_CHILD | WS_VISIBLE, 10, 10, 400, 320
    
    // Basic Information Tab Content
    LTEXT "Student ID:", -1, 25, 45, 50, 12
    EDITTEXT IDC_EDIT_ID, 85, 42, 120, 14, ES_AUTOHSCROLL
    
    LTEXT "Full Name:", -1, 220, 45, 50, 12
    EDITTEXT IDC_EDIT_NAME, 280, 42, 120, 14, ES_AUTOHSCROLL
    
    LTEXT "Age:", -1, 25, 70, 30, 12
    EDITTEXT IDC_EDIT_AGE, 85, 67, 60, 14, ES_AUTOHSCROLL | ES_NUMBER
    
    LTEXT "GPA:", -1, 160, 70, 30, 12
    EDITTEXT IDC_EDIT_GPA, 195, 67, 60, 14, ES_AUTOHSCROLL
    
    LTEXT "Major:", -1, 270, 70, 40, 12
    EDITTEXT IDC_EDIT_MAJOR, 315, 67, 85, 14, ES_AUTOHSCROLL
    
    LTEXT "Status:", -1, 25, 95, 40, 12
    COMBOBOX IDC_COMBO_STATUS, 85, 92, 100, 60, CBS_DROPDOWNLIST | WS_VSCROLL
    
    LTEXT "Nationality:", -1, 200, 95, 50, 12
    EDITTEXT IDC_EDIT_NATIONALITY, 255, 92, 145, 14, ES_AUTOHSCROLL
    
    // Contact Information
    GROUPBOX "Contact Information", -1, 20, 120, 380, 80
    
    LTEXT "Email:", -1, 30, 140, 30, 12
    EDITTEXT IDC_EDIT_EMAIL, 70, 137, 150, 14, ES_AUTOHSCROLL
    
    LTEXT "Phone:", -1, 240, 140, 35, 12
    EDITTEXT IDC_EDIT_PHONE, 280, 137, 110, 14, ES_AUTOHSCROLL
    
    LTEXT "Address:", -1, 30, 165, 40, 12
    EDITTEXT IDC_EDIT_ADDRESS, 70, 162, 320, 30, ES_AUTOHSCROLL | ES_MULTILINE | WS_VSCROLL
    
    // Academic Information
    GROUPBOX "Academic Information", -1, 20, 210, 180, 80
    
    LTEXT "Enrollment:", -1, 30, 230, 50, 12
    EDITTEXT IDC_EDIT_ENROLLMENT, 85, 227, 80, 14, ES_AUTOHSCROLL
    
    LTEXT "Graduation:", -1, 30, 255, 50, 12
    EDITTEXT IDC_EDIT_GRADUATION, 85, 252, 80, 14, ES_AUTOHSCROLL
    
    // Emergency & Medical
    GROUPBOX "Emergency & Medical", -1, 220, 210, 180, 80
    
    LTEXT "Emergency Contact:", -1, 230, 230, 70, 12
    EDITTEXT IDC_EDIT_EMERGENCY, 305, 227, 85, 14, ES_AUTOHSCROLL
    
    LTEXT "Blood Group:", -1, 230, 255, 50, 12
    COMBOBOX IDC_COMBO_BLOOD, 285, 252, 60, 60, CBS_DROPDOWNLIST | WS_VSCROLL
    
    // Notes
    LTEXT "Notes:", -1, 25, 300, 30, 12
    EDITTEXT IDC_EDIT_NOTES, 70, 297, 330, 25, ES_AUTOHSCROLL | ES_MULTILINE | WS_VSCROLL
    
    DEFPUSHBUTTON "Add Student", IDC_BTN_OK, 210, 345, 90, 28
    PUSHBUTTON "Cancel", IDC_BTN_CANCEL, 310, 345, 90, 28
END

